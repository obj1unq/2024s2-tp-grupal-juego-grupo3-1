program aventuraDelMate {
	game.title("Aventura del Mate")
	game.height(10)
	game.width(10)
	game.cellSize(50)
	game.boardGround("boardGame.png")
	//game.sound("musiJuego.mp3").play() //NO ME DEJA SUBIR EL ARCHIVO DE MUSICA A GITHUB, PERO LOGRÃ‰ QUE SE REPRODUZCA

	game.addVisual(inicio) //agarrar
	
	keyboard.a().onPressDo({ auto.agarrarObjeto() })
	
	
	keyboard.up().onPressDo({ auto.mover(arriba) })
	keyboard.left().onPressDo({ auto.mover(izquierda) })
	keyboard.down().onPressDo({ auto.mover(abajo) })
	keyboard.right().onPressDo({ auto.mover(derecha) })
	
	keyboard.enter().onPressDo({ inicio.cambiar() }) //Agrego el reloj
	
	
	game.onTick(1000, "reloj", { reloj.tick() })
	
	//game.onTick(10000, "cambiar tamblero", { superTablero.cambiarMapa() })
	
	game.start()
}
